<%= form_for (Dish.new) do |f|%>
  <div class = "form-control">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class = "form-control">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class = "form-control">
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>

  <div class = "form-control">
    <%= f.submit 'Сохранить' %>
  </div>

<% end%>