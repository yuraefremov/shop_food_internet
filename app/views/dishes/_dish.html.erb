<article class = "dish">
<div class="col-md-6">
  <section class = "dish-head">
    <h2> <%= link_to dish.name, dish_path(dish[:id]) %></h2>
    <small>
      <time> <%= dish.created_at.to_date.strftime("%d,%B,%Y")%></time>
        <% if user_signed_in? %>
          |<%= link_to 'Изменить', edit_dish_path(dish)%>
        <%end%>
        
        <% if dish.category.present? %>
          |
        <%= link_to dish.category.name, dish.category%>
        <% end %>
    </small>   
  </section>
  <section class="clearfix">
      <div class="thumb">
        <%= image_tag dish.image.url(:thumb), class: 'img-thumbnail' if dish.image? %>
      </div>
  </section>
  <section class = "dish-description">
    <%= dish.description %>
  </section>
</div>
<div class="col-md-6">
  <section class = "dish-price">
      Цена: <%= dish.price %> тнг
  </section>
</div>
</article>